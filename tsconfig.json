{
	"extends": "tslint:latest",
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"moduleResolution": "node",
		"removeComments": true,
		"noImplicitAny": true,
		"outDir": "dist"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "*.test.ts"],
	"linterOptions": {
		"exclude": ["src/packages/**/**/*.ts"]
	}
}
